<configuration supports_adding_forbidden="true">

    <!-- Ambari controlled Flink yarn session configuration -->

    <property>
        <name>flink_yarn_session_name</name>
        <value>Flink session cluster</value>
        <display-name>Flink Yarn session name</display-name>
        <description>Flink Yarn session name (Only needed when using Ambari controlled Flink Yarn session)</description>
    </property>

    <property>
        <name>slot_count</name>
        <value>2</value>
        <display-name>Number of slots per TaskManager</display-name>
        <description>Number of slots per TaskManager (Only needed when using Ambari controlled Flink Yarn session)</description>
    </property>

    <property>
        <name>yarn_user</name>
        <value>hdfs</value>
        <display-name>Default user for submitting Yarn session</display-name>
        <description>Default user for submitting Yarn session (Only needed when using Ambari controlled Flink Yarn session)</description>
    </property>

</configuration>