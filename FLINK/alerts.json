{
  "FLINK": {
    "service": [],
    "FLINK_MASTER": [
      {
        "name": "FLINK_MASTER",
        "label": "Flink Job Manager",
        "description": "This host-level alert is triggered if the 8081 port is unreachable.",
        "interval": 1,
        "scope": "ANY",
        "source": {
          "type": "PORT",
          "uri": "{{flink-conf/rest_port}}",
          "default_port": 8081,
          "reporting": {
            "ok": {
              "text": "TCP OK - {0:.3f}s response on port {1}"
            },
            "warning": {
              "text": "TCP OK - {0:.3f}s response on port {1}",
              "value": 1.5
            },
            "critical": {
              "text": "Connection failed: {0} to {1}:{2}",
              "value": 5
            }
          }
        }
      }
    ]
  }
}